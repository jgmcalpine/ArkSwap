generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AspDefinition {
  id          String    @id @default(uuid())
  name        String
  poolAddress String
  isProduction Boolean  @default(false)
  rounds      ArkRound[]
  transactions ArkTransaction[]

  @@map("asp_definitions")
}

model ScannedBlock {
  height      Int       @id
  hash        String
  processedAt DateTime  @default(now())

  @@map("scanned_blocks")
}

model ArkRound {
  txid        String    @id
  aspId       String
  blockHeight Int
  timestamp   DateTime
  inputAmount BigInt
  outputAmount BigInt
  vtxoCount   Int
  treeDepth   Int?
  asp         AspDefinition @relation(fields: [aspId], references: [id], onDelete: Cascade)

  @@map("ark_rounds")
}

model ArkTransaction {
  txid        String    @id
  aspId       String
  blockHeight Int
  timestamp   DateTime
  amount      BigInt
  type        String    // 'UNILATERAL_EXIT', 'LIFT', 'TRANSFER', etc.
  asp         AspDefinition @relation(fields: [aspId], references: [id], onDelete: Cascade)

  @@map("ark_transactions")
  @@index([aspId, timestamp])
  @@index([type, timestamp])
}

